<!DOCTYPE html>

<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Доставка</title>
    <link rel="stylesheet" asp-href-include="css/bootstrap**.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Пиво и чипсы</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <select class="form-select">
                            @await Component.InvokeAsync("CategoriesMenu")
                        </select>
                    </li>
                </ul>
            </div>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div>
                <a asp-controller="Cart" asp-action="Index">Корзина</a>
            </div>
        }
    </nav>
    @RenderBody()
</body>
</html>
